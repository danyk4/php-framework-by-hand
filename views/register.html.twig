{% extends 'layouts/default.html.twig' %}
{% block main %}
    <div class="bg-body-tertiary p-5 rounded">
        {% if session().hasFlash('error') %}
            <div class="alert alert-danger">
                <ul class="m-0">
                    {% for error in session().getFlash('error') %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        {% if session().hasFlash('success') %}
            <div class="alert alert-success">
                {{ session().getFlash('success')[0] }}
            </div>
        {% endif %}
        <form action="/register" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" name="name" value="Some Name" class="form-control" id="name" required>
            </div>
            <div class="mb-3">
                <label for=email" class="form-label">Email</label>
                <input type="email" name="email" value="ddd@ddd.com" class="form-control" id="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" value="password" class="form-control" id="password" required>
            </div>
            <div class="mb-3">
                <label for="password_confirmation" class="form-label">Confirm Password</label>
                <input type="password" name="password_confirmation" value="password" class="form-control" id="password_confirmation" required>
            </div>
            <button type="submit" class="btn btn-primary">Create User</button>
        </form>
    </div>
{% endblock %}
